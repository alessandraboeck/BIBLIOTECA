
@model Usuario

<h1 class="row justify-content-md-center">Registre um usuário</h1>

<div class="row justify-content-md-center">
    <form action="RegistrarUsuarios" method="post">
        <div class="form-group">
            <label asp-for="Nome">Nome</label>
            <input type="text" name="Nome" id="userNome" placeholder="Nome" required>
        </div>
        <div class="form-group">
            <label asp-for="Login">Login</label>
            <input type="text" name="Login" id="userLogin" placeholder="Login" required>
        </div>

        <div class="form-group">
            <label asp-for="Senha">Senha</label>
            <input type="text" name="Senha" id="userSenha" placeholder="Senha" required>
        </div>

        <div class="form-group">
            <select name="tipo" id="userTipo">
                <option value="@Usuario.ADMIN">Administrador</option>
                <option value="@Usuario.PADRAO">Padrão</option>
            </select>
        </div>

        <input type="submit" value="REGISTRAR" class="btn btn-primary">
    </form>
</div>